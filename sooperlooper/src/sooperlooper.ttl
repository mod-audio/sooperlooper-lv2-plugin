@prefix doap:   <http://usefulinc.com/ns/doap#>.
@prefix foaf:   <http://xmlns.com/foaf/0.1/>.
@prefix lv2:    <http://lv2plug.in/ns/lv2core#>.
@prefix mod:    <http://moddevices.com/ns/mod#>.
@prefix pprops: <http://lv2plug.in/ns/ext/port-props#>.
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#>.

<http://moddevices.com/plugins/sooperlooper>
a lv2:Plugin, lv2:UtilityPlugin;

doap:name "SooperLooper";
doap:license <http://usefulinc.com/doap/licenses/gpl>;

doap:developer [
    foaf:name "Jesse Chappell";
    foaf:homepage <http://essej.net/sooperlooper/oldplugin.html>;
    foaf:mbox <mailto:jesse@essej.net>;
];

doap:maintainer [
    foaf:name "MOD Team";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
];

mod:brand "MOD";
mod:label "SooperLooper";

lv2:minorVersion 0;
lv2:microVersion 9;
rdfs:comment """
Basic looping plugin
""";

lv2:port [
  a lv2:AudioPort, lv2:InputPort;
  lv2:index 0;
  lv2:symbol "input";
  lv2:name "Input";
  lv2:shortName "Input";
],
[
  a lv2:AudioPort, lv2:OutputPort;
  lv2:index 1;
  lv2:symbol "output";
  lv2:name "Output";
  lv2:shortName "Output";
],
[
  a lv2:ControlPort, lv2:InputPort;
  lv2:index 2;
  lv2:symbol "play_pause";
  lv2:name "Play/Pause";
  lv2:shortName "Play/Pause";
  lv2:default 0;
  lv2:minimum 0;
  lv2:maximum 1;
  lv2:portProperty lv2:integer, lv2:toggled;
],
[
  a lv2:ControlPort, lv2:InputPort;
  lv2:index 3;
  lv2:symbol "record";
  lv2:name "Record";
  lv2:shortName "Record";
  lv2:default 0;
  lv2:minimum 0;
  lv2:maximum 1;
  lv2:portProperty lv2:integer, lv2:toggled;
],
[
  a lv2:ControlPort, lv2:InputPort;
  lv2:index 4;
  lv2:symbol "reset";
  lv2:name "Reset";
  lv2:shortName "Reset";
  lv2:default 0;
  lv2:minimum 0;
  lv2:maximum 1;
  lv2:portProperty lv2:integer, lv2:toggled, pprops:trigger;
],
[
  a lv2:ControlPort, lv2:InputPort;
  lv2:index 5;
  lv2:symbol "undo";
  lv2:name "Undo";
  lv2:shortName "Undo";
  lv2:default 0;
  lv2:minimum 0;
  lv2:maximum 1;
  lv2:portProperty lv2:integer, lv2:toggled, pprops:trigger;
],
[
  a lv2:ControlPort, lv2:InputPort;
  lv2:index 6;
  lv2:symbol "redo";
  lv2:name "Redo";
  lv2:shortName "Redo";
  lv2:default 0;
  lv2:minimum 0;
  lv2:maximum 1;
  lv2:portProperty lv2:integer, lv2:toggled, pprops:trigger;

].
